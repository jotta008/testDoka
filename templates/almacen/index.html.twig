{% extends 'base.html.twig' %}

{% block title %}Almacen{% endblock %}

{% block body %}
<div class="row centrado">
    <div class="col-10">
        <h1>Almacen</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for almacen in almacens %}
                <tr>
                    <td>{{ almacen.nombre }}</td>
                    <td>
                        <button class="btn btn-success">
                            <a href="{{ path('app_almacen_show', {'id': almacen.id}) }}">Ver</a>
                        </button>
                        <button class="btn btn-warning">
                            <a href="{{ path('app_almacen_edit', {'id': almacen.id}) }}">Editar</a>
                        </button>
                        <form method="post" action="{{ path('app_almacen_delete', {'id': almacen.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="margin-top-10px">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ almacen.id) }}">
                            <button class="btn btn-danger">Eliminar</button>
                        </form>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No hay registros</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<div class="row centrado">
    <div class="col-10">
        <a href="{{ path('app_almacen_new') }}"><button  class="btn btn-success">Crear nuevo almac√©n</button></a>
    </div>
</div>
{% endblock %}
